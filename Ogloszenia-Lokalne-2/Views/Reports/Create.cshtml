@model Ogloszenia_Lokalne_2.Models.Report

@{
    ViewBag.Title = "Report";
}

<style>
    #blok0 {
        background-color: #dcdcdc;
        width: 100%;
        padding: 30px;
        padding-bottom: 20px;
    }

    textarea {
        max-width: 80%;
    }
</style>

<div id="blok0">

    <h2>Zgłoszenie ogłoszenia "@ViewBag.Ad"</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.AdID)
            @Html.HiddenFor(model => model.UserReportedID)

            <div class="form-group">
                @Html.LabelFor(model => model.ReportMessage, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.ReportMessage, new { @class = "form-control", @rows = 5 })
                    @Html.ValidationMessageFor(model => model.ReportMessage, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Zgłoś" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
