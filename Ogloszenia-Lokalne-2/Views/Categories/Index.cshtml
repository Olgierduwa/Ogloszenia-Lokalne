@model IEnumerable<Ogloszenia_Lokalne_2.Models.Category>

@{
    ViewBag.Title = "Index";
}


<style type="text/css">

    #blok0 {
        background-color: #dcdcdc;
        width: 100%;
        padding: 30px;
        padding-bottom: 20px;
    }

</style>

<div id="blok0">
    <h2>Kategorie</h2>
    <p>
        <input type="button" style="width:140px" value="Dodaj nową" class="btn btn-success" onclick="location.href='@Url.Action("Create")'" />
    </p>
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryParentID)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryParent.Name)
                </td>
                <td>
                    <input type="button" style="width:300px" value="Ogłoszenia w kategorii" class="btn btn-info" onclick="location.href='@Url.Action("Details",  new { id = item.CategoryID })'" />
                    <input type="button" style="width:70px" value="Edytuj" class="btn btn-warning" onclick="location.href='@Url.Action("Edit",  new { id = item.CategoryID })'" />
                    <input type="button" style="width:70px" value="Usuń" class="btn btn-danger" onclick="location.href='@Url.Action("Delete",  new { id = item.CategoryID })'" />

                </td>
            </tr>
        }
    </table>
</div>
