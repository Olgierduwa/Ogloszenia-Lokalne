@model IEnumerable<Ogloszenia_Lokalne_2.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Kategorie</h2>

<p>
    @Html.ActionLink("Nowa kategoria", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryParentID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryParent.Name)
            </td>
            <td>
                @Html.ActionLink("Ogłoszenia w kategorii", "Details", new { id = item.CategoryID }) |
                @Html.ActionLink("Edytuj", "Edit", new { id = item.CategoryID }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.CategoryID })
            </td>
        </tr>
    }

</table>
