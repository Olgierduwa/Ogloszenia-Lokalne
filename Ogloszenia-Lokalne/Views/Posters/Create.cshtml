@model PROJECT_MVC.Models.ModelsView.PosterCreate

@{
    ViewBag.Title = "Create";
}

<h2>Tworzenie</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>nowe ogłoszenie</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Poster.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Poster.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Poster.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Poster.IsValuable, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Poster.IsValuable)
                @Html.ValidationMessageFor(model => model.Poster.IsValuable, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Poster.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Poster.Price, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Poster.Content, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Poster.Content, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Poster.Content, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Poster.References, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Poster.References, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Poster.References, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Poster.PostersCategories, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.DropDownList("CategoriesID", (MultiSelectList)ViewBag.Categories,
                new { multiple = "multiple", size = 6, @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.CategoriesID, "", new { @class = "text-danger col-md-10" })

        </div>
    </div>

    <div class="form-group">
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.Poster.IsActive, htmlAttributes: new { @class = "control-label col-md-9" })
            @Html.EditorFor(model => model.Poster.IsActive, new { htmlAttributes = new { @class = "checkbox" } })
        </div>
        <div class="form-group col-md-3">
            <div class="col-md-8">
                <input type="submit" value="Zapisz" class="btn btn-default col-md-12" />
            </div>
            <div class="col-md-8">
                <a href="@Request.UrlReferrer">
                    <input type="button" value="Anuluj" class="btn btn-default col-md-12" />
                </a>
            </div>
        </div>
    </div>

</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
