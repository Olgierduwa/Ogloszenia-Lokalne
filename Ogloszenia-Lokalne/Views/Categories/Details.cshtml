@model PROJECT_MVC.Models.Category

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryParentID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryParent.Name)
        </dd>

    </dl>

    <div class="form-group">
        <label class="control-label col-md-12">Ogłoszenia w kategorii</label>
        <ul class="dl-horizontal">
            @if (ViewBag.Posters.Count > 0)
            { foreach (var item in ViewBag.Posters) { <li>@item</li> } }
            else { <li>Brak ogłoszeń</li> }
        </ul>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
